* {
    font-family: 'Segoe UI', sans-serif;
    font-size: 10pt;
    margin: 0;
    padding: 0;
}

QWidget {
    background-color: #f5f5f5;
    color: #333333;
}

QWidget:focus {
    outline: none;
    border: none;
}

QLabel {
    background: transparent;
    color: #333333;
    font-size: 12pt;
}

QFrame {
    background: transparent;
    border: none;
}

QPushButton, AnimatedButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1, 
        stop:0 #ff1744, 
        stop:0.3 #e91e63, 
        stop:0.7 #00bcd4, 
        stop:1 #18ffff);
    color: #fff;
    border: none;
    border-radius: 16px;
    padding: 12px 28px;
    font-size: 12pt;
    font-weight: bold;
}

QPushButton:hover, AnimatedButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1, 
        stop:0 #ff5722, 
        stop:0.3 #ff4081, 
        stop:0.7 #26c6da, 
        stop:1 #64ffda);
}

QPushButton:pressed, AnimatedButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1, 
        stop:0 #d32f2f, 
        stop:0.5 #c2185b, 
        stop:1 #0097a7);
}

QLineEdit, QComboBox {
    background-color: #ffffff;
    color: #333333;
    border: 2px solid #dddddd;
    border-radius: 16px;
    padding: 12px;
}

QLineEdit:focus, QComboBox:focus {
    background-color: #ffffff;
    border: 2px solid qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 #ff1744, 
        stop:0.5 #e91e63, 
        stop:1 #00bcd4);
}

QComboBox::drop-down,
QComboBox::down-arrow {
    border: none;
    image: none;
}

/* Açılır liste görünümü */
QComboBox QAbstractItemView {
    background-color: #ffffff;
    border: 2px solid #cccccc;
    padding: 8px;
    outline: none;
    selection-background-color: qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 #ff1744, 
        stop:0.5 #e91e63, 
        stop:1 #00bcd4);
    selection-color: #ffffff;
}

QComboBox QAbstractItemView::item {
    padding: 6px 12px;
    color: #333333;
    background-color: transparent;
    font-size: 10.5pt;
    border-radius: 8px;
}

QComboBox QAbstractItemView::item:hover:!selected {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 rgba(255,23,68,0.1), 
        stop:0.5 rgba(233,30,99,0.1), 
        stop:1 rgba(0,188,212,0.1));
    border: 1px solid qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 #ff1744, 
        stop:1 #00bcd4);
}

QComboBox QAbstractItemView::item:selected {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1, 
        stop:0 #ff1744, 
        stop:0.3 #e91e63, 
        stop:0.7 #00bcd4, 
        stop:1 #18ffff);
    color: #ffffff;
    border-radius: 8px;
}

QGroupBox {
    background-color: #ffffff;
    border: 2px solid #cccccc;
    border-radius: 20px;
    margin-top: 1.5em;
    padding: 18px;
    color: #333333;
    font-size: 12pt;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 0 16px;
    color: qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 #ff1744, 
        stop:0.5 #e91e63, 
        stop:1 #00bcd4);
    font-size: 13pt;
    font-weight: bold;
    background: transparent;
}

QTableWidget, QTableView {
    background-color: #ffffff;
    color: #333333;
    gridline-color: #cccccc;
    border: 2px solid #cccccc;
    border-radius: 0;
}

QTableWidget::item {
    padding: 10px;
    border-bottom: 1px solid #cccccc;
    background: transparent;
    color: #333333;
}

QTableWidget::item:selected {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 #ff1744, 
        stop:0.3 #e91e63, 
        stop:0.7 #00bcd4, 
        stop:1 #18ffff);
    color: #ffffff;
}

QHeaderView::section {
    background-color: #eeeeee;
    color: #333333;
    padding: 10px;
    border-bottom: 2px solid #cccccc;
    border-radius: 0;
}

QListWidget {
    background-color: #ffffff;
    color: #333333;
    border: none;
    border-radius: 20px 0 0 20px;
    padding: 18px 12px;
}

QListWidget::item {
    background: transparent;
    color: #333333;
    padding: 18px;
    margin: 6px;
    border-radius: 16px;
    font-size: 14px;
    font-weight: bold;
}

QListWidget::item:hover:!selected {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 rgba(255,23,68,0.08), 
        stop:0.5 rgba(233,30,99,0.08), 
        stop:1 rgba(0,188,212,0.08));
    border: 2px solid qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 #ff1744, 
        stop:1 #00bcd4);
}

QListWidget::item:selected {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 #ff1744, 
        stop:0.3 #e91e63, 
        stop:0.7 #00bcd4, 
        stop:1 #18ffff);
    color: #ffffff;
    border: 2px solid #ffffff;
}

QTextEdit {
    background-color: #ffffff;
    color: #333333;
    border: 2px solid #cccccc;
    border-radius: 16px;
    padding: 12px;
}

QCheckBox, QRadioButton {
    spacing: 10px;
    font-size: 12pt;
    color: #333333;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 22px;
    height: 22px;
    border: 2px solid #cccccc;
    border-radius: 8px;
}

QCheckBox::indicator:checked,
QRadioButton::indicator:checked {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1, 
        stop:0 #ff1744, 
        stop:0.5 #e91e63, 
        stop:1 #00bcd4);
    border-color: #18ffff;
}

QMenuBar {
    background-color: #ffffff;
    color: #333333;
    border-bottom: 2px solid #cccccc;
    border-radius: 0 0 16px 16px;
}

QMenuBar::item {
    padding: 10px 16px;
    background: transparent;
    color: #333333;
    border-radius: 12px;
}

QMenuBar::item:selected {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 #ff1744, 
        stop:0.5 #e91e63, 
        stop:1 #00bcd4);
    color: #ffffff;
}

QMenu {
    background-color: #ffffff;
    color: #333333;
    border: 2px solid #cccccc;
    border-radius: 16px;
    padding: 8px;
}

QMenu::item {
    padding: 10px 28px 10px 24px;
    border-radius: 10px;
}

QMenu::item:selected {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 #ff1744, 
        stop:0.5 #e91e63, 
        stop:1 #00bcd4);
    color: #ffffff;
}

QProgressBar {
    height: 24px;
    border-radius: 16px;
    background: rgba(0, 0, 0, 0.07);
    text-align: center;
    font-weight: bold;
    color: #333333;
    margin: 0 14px;
}

QProgressBar::chunk {
    border-radius: 16px;
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 #ff1744, 
        stop:0.3 #e91e63, 
        stop:0.6 #9c27b0, 
        stop:0.8 #00bcd4, 
        stop:1 #18ffff);
}

QScrollBar:vertical,
QScrollBar:horizontal {
    background: #ffffff;
    border-radius: 8px;
    width: 14px;
    height: 14px;
}

QScrollBar::handle:vertical,
QScrollBar::handle:horizontal {
    min-width: 28px;
    min-height: 28px;
    border-radius: 8px;
    background: #dddddd;
}

QScrollBar::handle:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 #ff5722, 
        stop:1 #26c6da);
}

QScrollBar::add-line,
QScrollBar::sub-line {
    width: 0;
    height: 0;
}

QStatusBar {
    background-color: #ffffff;
    color: #333333;
    border-top: 2px solid #dddddd;
}

QStatusBar QLabel {
    padding: 5px 10px;
    border-radius: 10px;
    background: transparent;
}

QStatusBar QPushButton {
    padding: 5px 15px;
    border-radius: 10px;
    background: rgba(0,0,0,0.05);
    color: #333333;
    border: none;
}

QStatusBar QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, 
        stop:0 rgba(255,23,68,0.1), 
        stop:1 rgba(0,188,212,0.1));
}

QFrame#separator {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(255,23,68,0.05),
        stop:0.3 rgba(233,30,99,0.08),
        stop:0.7 rgba(0,188,212,0.08),
        stop:1 rgba(24,255,255,0.05));
    width: 1px;
}